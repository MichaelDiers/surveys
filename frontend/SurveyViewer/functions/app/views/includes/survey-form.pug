- var formAttributes = { method: 'POST', action: '.' }
if closed 
  - formAttributes = {}

form&attributes(formAttributes)
    if !closed
      input(type='hidden', name='_csrf', value=csurfToken)
      input(type='hidden', value=participantId, name='participantId')
    each question in questions
      label= question.question
      - var selectAttributes = {}
      if closed 
        - selectAttributes = { disabled: 'disabled' }
      select(id=question.guid, name=question.guid, required='required')&attributes(selectAttributes)
        each choice in question.choices
          - var attributes = {}
          if choice.isSelected
            - attributes.selected = 'selected'
          if choice.hasNoValue === true 
            - attributes.value = ''
          else 
            - attributes.value = choice.value
          option&attributes(attributes)= choice.answer
    if !closed
      input(type='submit', value='submit')