extends ../extends/layout

block variables 
  - var title= surveyName

block content
  h1 Hej #{participantName}!
  h2 Wilkommen zur Umfrage #{surveyName}!
  form(method='POST', action='.')
    input(type='hidden', name='_csrf', value=csurfToken)
    input(type='hidden', value=participantId, name='participantId')
    each question in questions
      label= question.question
      select(id=question.guid, name=question.guid, required='required')
        each choice in question.choices
          - var attributes = {}
          if choice.isSelected
            - attributes.selected = 'selected'
          if choice.hasNoValue === true 
            - attributes.value = ''
          else 
            - attributes.value = choice.value
          option&attributes(attributes)= choice.answer
    input(type='submit', value='submit')