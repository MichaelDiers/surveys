{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint -c .eslintrc.js ../",
    "git": "git add .. && git status",
    "gitadd": "npm run lintall && npm run ugly && npm run git",
    "start": "npx functions-framework --target=SurveyViewer --port=8081",
    "ugly": "uglifyjs ../client/js/*.js --compress --mangle -o app/static/client.min.js",
    "uglybeauty": "uglifyjs ../client/js/*.js --beautify -o app/static/client.min.js",
    "csslint": "npx stylelint --config ../.stylelintrc.json ../client/scss/**/*",
    "puglint": "pug-lint -c ../.pug-lintrc.json -r inline ./app/views/",
    "lintall": "npm run lint && npm run csslint && npm run puglint"
  },
  "engines": {
    "node": "14"
  },
  "main": "function.js",
  "dependencies": {
    "@google-cloud/pubsub": "^2.18.4",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express": "^4.17.2",
    "helmet": "^4.6.0",
    "pug": "^3.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^2.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "pug-lint": "^2.6.0",
    "stylelint": "^14.3.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "uglify-js": "^3.15.0"
  },
  "private": true
}
